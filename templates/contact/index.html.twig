{% extends 'base.html.twig' %}

{% block title %}{{ templateService.pageSeo.contactPageTitle|default('Fale Conosco - Procordis') }}{% endblock %}
{% block description %}{{ templateService.pageSeo.contactPageDescription|default('Entre em contato com a Procordis. Endereço, telefone, WhatsApp e formulário de contato.') }}{% endblock %}

{% block seo_schema %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Fale Conosco - Procordis",
  "url": "{{ url('app_contact') }}",
  "mainEntity": {
    "@type": "MedicalOrganization",
    "name": "Procordis",
    "telephone": "{{ templateService.generalData.phone|default('(16) 3397-4625') }}",
    "email": "{{ templateService.generalData.email|default('secretaria@procordis.org.br') }}",
     "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ templateService.generalData.address|default('Av. Queiroz Filho, 685 - Vila Sedenho') }}",
        "addressLocality": "Araraquara",
        "addressRegion": "SP",
        "postalCode": "14800-000",
        "addressCountry": "BR"
      }
  }
}
</script>
{% endblock %}

{% block content %}
    <!-- Hero Small -->
    <div class="bg-primary-900 py-32 text-center text-white relative overflow-hidden">
        <div class="absolute inset-0 z-0">
             <div class="absolute inset-0 bg-primary-900/40 mix-blend-multiply"></div>
             <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/medical-icons.png')] opacity-5"></div>
        </div>
        <div class="relative z-10 container mx-auto px-6">
            <h1 class="super-hero-title text-4xl md:text-5xl mb-4 animate-fade-in-up">Fale Conosco</h1>
            <p class="super-hero-subtitle animate-fade-in-up delay-100">
                Estamos prontos para atender você com agilidade e carinho.
            </p>
        </div>
    </div>

    <section class="py-24 bg-slate-50 dark:bg-background">
        <div class="container mx-auto px-6 -mt-32 relative z-20">
            <div class="flex flex-col lg:flex-row gap-8">
                
                <!-- Contact Info -->
                <div class="lg:w-5/12 space-y-6" data-aos="fade-right">
                    <!-- Info Card -->
                    <div class="bg-white dark:bg-card p-8 rounded-2xl shadow-xl border border-slate-100 dark:border-border h-full">
                         <h2 class="text-2xl font-display font-bold text-slate-900 dark:text-card-foreground mb-8">Informações de Contato</h2>
                         
                         <div class="space-y-8">
                            {% if templateService.generalData.address %}
                                <a href="https://www.google.com/maps/search/?api=1&query={{ templateService.generalData.address|url_encode }}" target="_blank" class="flex items-start group hover:text-primary-600 transition-colors">
                                    <div class="w-14 h-14 bg-primary-50 dark:bg-primary/20 rounded-2xl flex items-center justify-center text-primary-600 dark:text-primary mr-5 group-hover:bg-primary-600 group-hover:text-white transition-colors shadow-sm">
                                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-slate-900 dark:text-card-foreground text-sm uppercase tracking-widest mb-1 group-hover:text-primary-600">Endereço</h3>
                                        <p class="text-slate-600 dark:text-muted-foreground leading-relaxed group-hover:text-primary-600 transition-colors">{{ templateService.generalData.address }}</p>
                                    </div>
                                </a>
                            {% endif %}
                            
                             {% if templateService.generalData.phone %}
                                <a href="tel:{{ templateService.generalData.phone }}" class="flex items-start group hover:text-primary-600 transition-colors">
                                    <div class="w-14 h-14 bg-primary-50 dark:bg-primary/20 rounded-2xl flex items-center justify-center text-primary-600 dark:text-primary mr-5 group-hover:bg-primary-600 group-hover:text-white transition-colors shadow-sm">
                                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-slate-900 dark:text-card-foreground text-sm uppercase tracking-widest mb-1 group-hover:text-primary-600">Telefone</h3>
                                        <p class="text-slate-600 dark:text-muted-foreground leading-relaxed group-hover:text-primary-600 transition-colors">{{ templateService.generalData.phone }}</p>
                                    </div>
                                </a>
                            {% endif %}
                            
                            {% if templateService.generalData.email %}
                                <a href="mailto:{{ templateService.generalData.email }}" class="flex items-start group hover:text-primary-600 transition-colors">
                                    <div class="w-14 h-14 bg-primary-50 dark:bg-primary/20 rounded-2xl flex items-center justify-center text-primary-600 dark:text-primary mr-5 group-hover:bg-primary-600 group-hover:text-white transition-colors shadow-sm">
                                        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-slate-900 dark:text-card-foreground text-sm uppercase tracking-widest mb-1 group-hover:text-primary-600">E-mail</h3>
                                        <p class="text-slate-600 dark:text-muted-foreground leading-relaxed group-hover:text-primary-600 transition-colors">{{ templateService.generalData.email }}</p>
                                    </div>
                                </a>
                            {% endif %}
                         </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="lg:w-7/12" data-aos="fade-left">
                    <div class="bg-white dark:bg-card p-8 lg:p-12 rounded-2xl shadow-xl border border-slate-100 dark:border-border h-full">
                         <h2 class="text-2xl font-display font-bold text-slate-900 dark:text-card-foreground mb-8">Envie uma Mensagem</h2>
                         
                         {% for message in app.flashes('success') %}
                            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl relative mb-8 flex items-center animate-fade-in-up" role="alert">
                                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                <span class="block sm:inline font-bold">{{ message }}</span>
                            </div>
                        {% endfor %}

                         {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    {{ form_label(form.name, null, {'label_attr': {'class': 'block mb-2 text-sm font-bold text-slate-700 dark:text-foreground uppercase tracking-wide'}}) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'bg-slate-50 dark:bg-muted border border-slate-200 dark:border-input text-slate-900 dark:text-foreground text-sm rounded-xl focus:ring-primary-500 focus:border-primary-500 block w-full p-4 transition-all shadow-sm focus:shadow-md'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                
                                <div>
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'block mb-2 text-sm font-bold text-slate-700 dark:text-foreground uppercase tracking-wide'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'bg-slate-50 dark:bg-muted border border-slate-200 dark:border-input text-slate-900 dark:text-foreground text-sm rounded-xl focus:ring-primary-500 focus:border-primary-500 block w-full p-4 transition-all shadow-sm focus:shadow-md'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            
                            <div>
                                {{ form_label(form.subject, null, {'label_attr': {'class': 'block mb-2 text-sm font-bold text-slate-700 dark:text-foreground uppercase tracking-wide'}}) }}
                                {{ form_widget(form.subject, {'attr': {'class': 'bg-slate-50 dark:bg-muted border border-slate-200 dark:border-input text-slate-900 dark:text-foreground text-sm rounded-xl focus:ring-primary-500 focus:border-primary-500 block w-full p-4 transition-all shadow-sm focus:shadow-md'}}) }}
                                {{ form_errors(form.subject) }}
                            </div>

                            <div>
                                {{ form_label(form.message, null, {'label_attr': {'class': 'block mb-2 text-sm font-bold text-slate-700 dark:text-foreground uppercase tracking-wide'}}) }}
                                {{ form_widget(form.message, {'attr': {'class': 'bg-slate-50 dark:bg-muted border border-slate-200 dark:border-input text-slate-900 dark:text-foreground text-sm rounded-xl focus:ring-primary-500 focus:border-primary-500 block w-full p-4 h-40 resize-none transition-all shadow-sm focus:shadow-md'}}) }}
                                {{ form_errors(form.message) }}
                            </div>

                            <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 font-bold rounded-xl text-base px-8 py-5 shadow-lg shadow-primary-500/30 transition-all duration-300 hover:-translate-y-1 mt-4">
                                Enviar Mensagem
                            </button>

                         {{ form_end(form) }}
                    </div>
                </div>
            </div>
            
            <!-- Map Section -->
             {% if templateService.generalData.mapEmbedCode %}
                <div class="mt-20 bg-white dark:bg-card p-3 rounded-2xl shadow-lg border border-slate-200 dark:border-border h-96" data-aos="fade-up">
                    <div class="w-full h-full rounded-xl overflow-hidden iframe-container grayscale hover:grayscale-0 transition-all duration-1000">
                        {{ templateService.generalData.mapEmbedCode|raw }}
                    </div>
                </div>
                <style>
                    .iframe-container iframe { width: 100%; height: 100%; border: 0; }
                </style>
            {% endif %}
        </div>
    </section>
{% endblock %}
