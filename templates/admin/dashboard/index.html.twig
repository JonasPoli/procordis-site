{% extends 'admin/base_admin.html.twig' %}

{% block title %}Dashboard - Procordis Admin{% endblock %}

{% block page_title %}Visão Geral{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Card Notícias -->
        <div class="glass-panel rounded-2xl p-6 relative overflow-hidden group hover:bg-white/40 transition-all duration-300">
            <div class="absolute -right-4 -top-4 w-24 h-24 bg-blue-500/10 rounded-full group-hover:scale-110 transition-transform duration-300"></div>
            <div class="flex items-center justify-between mb-4 relative z-10">
                <div class="p-3 bg-blue-100/50 text-blue-600 rounded-xl">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path></svg>
                </div>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Conteúdo</span>
            </div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-slate-800 mb-1">{{ newsCount }}</h3>
                <p class="text-sm text-slate-500 font-medium">Notícias publicadas</p>
            </div>
            <div class="mt-4 pt-4 border-t border-slate-100/50">
                 <a href="{{ path('admin_news_index') }}" class="text-sm font-semibold text-blue-600 hover:text-blue-700 flex items-center group-hover:translate-x-1 transition-transform">
                    Gerenciar notícias <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </a>
            </div>
        </div>

        <!-- Card Serviços -->
        <div class="glass-panel rounded-2xl p-6 relative overflow-hidden group hover:bg-white/40 transition-all duration-300">
            <div class="absolute -right-4 -top-4 w-24 h-24 bg-emerald-500/10 rounded-full group-hover:scale-110 transition-transform duration-300"></div>
            <div class="flex items-center justify-between mb-4 relative z-10">
                <div class="p-3 bg-emerald-100/50 text-emerald-600 rounded-xl">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path></svg>
                </div>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Serviços</span>
            </div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-slate-800 mb-1">{{ servicesCount }}</h3>
                <p class="text-sm text-slate-500 font-medium">Serviços ativos</p>
            </div>
            <div class="mt-4 pt-4 border-t border-slate-100/50">
                 <a href="{{ path('admin_service_index') }}" class="text-sm font-semibold text-emerald-600 hover:text-emerald-700 flex items-center group-hover:translate-x-1 transition-transform">
                    Ver serviços <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </a>
            </div>
        </div>

        <!-- Card Equipe -->
         <div class="glass-panel rounded-2xl p-6 relative overflow-hidden group hover:bg-white/40 transition-all duration-300">
            <div class="absolute -right-4 -top-4 w-24 h-24 bg-violet-500/10 rounded-full group-hover:scale-110 transition-transform duration-300"></div>
            <div class="flex items-center justify-between mb-4 relative z-10">
                <div class="p-3 bg-violet-100/50 text-violet-600 rounded-xl">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                </div>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Equipe</span>
            </div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-slate-800 mb-1">--</h3>
                <p class="text-sm text-slate-500 font-medium">Especialistas</p>
            </div>
            <div class="mt-4 pt-4 border-t border-slate-100/50">
                 <a href="{{ path('admin_doctor_index') }}" class="text-sm font-semibold text-violet-600 hover:text-violet-700 flex items-center group-hover:translate-x-1 transition-transform">
                    Gerenciar equipe <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </a>
            </div>
        </div>
        
        <!-- Card Transparência -->
         <div class="glass-panel rounded-2xl p-6 relative overflow-hidden group hover:bg-white/40 transition-all duration-300">
            <div class="absolute -right-4 -top-4 w-24 h-24 bg-amber-500/10 rounded-full group-hover:scale-110 transition-transform duration-300"></div>
            <div class="flex items-center justify-between mb-4 relative z-10">
                <div class="p-3 bg-amber-100/50 text-amber-600 rounded-xl">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                </div>
                <span class="text-xs font-bold text-slate-400 uppercase tracking-wider">Transparência</span>
            </div>
            <div class="relative z-10">
                <h3 class="text-3xl font-bold text-slate-800 mb-1">--</h3>
                <p class="text-sm text-slate-500 font-medium">Documentos</p>
            </div>
            <div class="mt-4 pt-4 border-t border-slate-100/50">
                 <a href="{{ path('admin_transparency_index') }}" class="text-sm font-semibold text-amber-600 hover:text-amber-700 flex items-center group-hover:translate-x-1 transition-transform">
                    Ver documentos <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                </a>
            </div>
        </div>
    </div>

    <!-- Seção de Acesso Rápido -->
    <div class="glass-panel p-6 rounded-2xl">
        <h2 class="text-lg font-bold text-slate-800 mb-4">Acesso Rápido</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
             <a href="{{ path('admin_news_new') }}" class="p-4 rounded-xl border border-slate-200 hover:border-blue-300 hover:bg-blue-50/50 transition-all text-center group">
                <div class="w-10 h-10 mx-auto bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform shadow-sm">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                </div>
                <span class="text-sm font-medium text-slate-700">Nova Notícia</span>
            </a>
             <a href="{{ path('admin_service_new') }}" class="p-4 rounded-xl border border-slate-200 hover:border-emerald-300 hover:bg-emerald-50/50 transition-all text-center group">
                <div class="w-10 h-10 mx-auto bg-emerald-100 text-emerald-600 rounded-full flex items-center justify-center mb-2 group-hover:scale-110 transition-transform shadow-sm">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                </div>
                <span class="text-sm font-medium text-slate-700">Novo Serviço</span>
            </a>
        </div>
    </div>
{% endblock %}
