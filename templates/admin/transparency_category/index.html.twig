{% extends 'admin/base_admin.html.twig' %}

{% block title %}Categorias de Transparência - Admin{% endblock %}
{% block page_title %}Categorias de Transparência{% endblock %}

{% block body %}
<div class="glass-panel rounded-2xl p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-800 dark:text-white">Categorias de Transparência</h1>
        <a href="{{ path('admin_transparency_category_new') }}" class="bg-blue-600 text-white px-5 py-2.5 rounded-xl hover:bg-blue-700 transition-colors font-medium flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
            Nova Categoria
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full text-sm">
            <thead>
                <tr class="border-b border-slate-200 dark:border-slate-700">
                    <th class="text-left py-4 px-4 font-semibold text-slate-700 dark:text-slate-300">Título</th>
                    <th class="text-left py-4 px-4 font-semibold text-slate-700 dark:text-slate-300">Slug</th>
                    <th class="text-center py-4 px-4 font-semibold text-slate-700 dark:text-slate-300">Documentos</th>
                    <th class="text-center py-4 px-4 font-semibold text-slate-700 dark:text-slate-300">Status</th>
                    <th class="text-right py-4 px-4 font-semibold text-slate-700 dark:text-slate-300">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                <tr class="border-b border-slate-100 dark:border-slate-800 hover:bg-slate-50 dark:hover:bg-slate-800/50">
                    <td class="py-4 px-4 font-medium text-slate-800 dark:text-slate-200">{{ category.title }}</td>
                    <td class="py-4 px-4 text-slate-500 dark:text-slate-400">{{ category.slug }}</td>
                    <td class="py-4 px-4 text-center">
                        <span class="bg-blue-100 text-blue-700 dark:bg-blue-900/50 dark:text-blue-300 px-2 py-1 rounded-full text-xs font-medium">
                            {{ category.documents|length }}
                        </span>
                    </td>
                    <td class="py-4 px-4 text-center">
                        {% if category.isActive %}
                            <span class="bg-green-100 text-green-700 dark:bg-green-900/50 dark:text-green-300 px-2 py-1 rounded-full text-xs font-medium">Ativo</span>
                        {% else %}
                            <span class="bg-slate-100 text-slate-500 dark:bg-slate-800 dark:text-slate-400 px-2 py-1 rounded-full text-xs font-medium">Inativo</span>
                        {% endif %}
                    </td>
                    <td class="py-4 px-4 text-right">
                        <div class="flex justify-end gap-2">
                            <a href="{{ path('admin_transparency_category_edit', {id: category.id}) }}" class="p-2 text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/30 rounded-lg transition-colors" title="Editar">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            </a>
                            <form action="{{ path('admin_transparency_category_delete', {id: category.id}) }}" method="post" class="inline" onsubmit="return confirm('Excluir esta categoria e todos os documentos associados?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button type="submit" class="p-2 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/30 rounded-lg transition-colors" title="Excluir">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="py-8 text-center text-slate-500 dark:text-slate-400">Nenhuma categoria cadastrada.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
