{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Linha do Tempo{% endblock %}

{% block body %}
    <div class="mb-4 flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Linha do Tempo</h1>
            <a href="{{ path('admin_about_edit') }}" class="text-sm text-blue-600 hover:underline dark:text-blue-400 dark:hover:text-blue-300">&larr; Voltar para Quem Somos</a>
        </div>
        <a href="{{ path('admin_timeline_new') }}" class="btn bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
            + Novo Evento
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Ano</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Imagem</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Título</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Ordem</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                    <td class="p-4 font-bold text-lg text-blue-600 dark:text-blue-400">{{ item.year }}</td>
                    <td class="p-4">
                        {% if item.imageName %}
                            <img src="{{ vich_uploader_asset(item, 'imageFile') }}" class="h-12 w-12 object-cover rounded shadow-sm" alt="Timeline">
                        {% else %}
                            <span class="text-gray-400 italic text-xs">Sem imagem</span>
                        {% endif %}
                    </td>
                    <td class="p-4 font-medium text-gray-900 dark:text-gray-200">{{ item.title }}</td>
                    <td class="p-4 text-sm text-gray-600 dark:text-gray-400">{{ item.sortOrder }}</td>
                    <td class="p-4 text-right">
                        {{ include('admin/_partials/action_buttons.html.twig', {
                            edit_url: path('admin_timeline_edit', {id: item.id}),
                            delete_url: path('admin_timeline_delete', {id: item.id}),
                            csrf_token: csrf_token('delete' ~ item.id)
                        }) }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhum evento na linha do tempo.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
