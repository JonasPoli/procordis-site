{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Notícias{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <div></div>
        <a href="{{ path('admin_news_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            + Nova Notícia
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">ID</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Imagem</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Título</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-center">Data</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 dark:text-gray-300 text-sm font-light">
                {% for item in news %}
                    <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                        <td class="p-4 whitespace-nowrap">
                            <span class="font-medium text-gray-900 dark:text-white">{{ item.id }}</span>
                        </td>
                         <td class="p-4">
                            {% if item.imageName %}
                                <img src="{{ asset('images/news/' ~ item.imageName) | imagine_filter('admin_thumb') }}" class="w-10 h-10 rounded-full object-cover">
                            {% else %}
                                <span class="text-gray-400">Sem imagem</span>
                            {% endif %}
                        </td>
                        <td class="p-4 font-medium text-gray-900 dark:text-gray-200">
                            {{ item.title }}
                        </td>
                        <td class="p-4 text-center">
                            {{ item.publishedAt ? item.publishedAt|date('d/m/Y') : '' }}
                        </td>
                        <td class="p-4 text-center">
                            {{ include('admin/_partials/action_buttons.html.twig', {
                                edit_url: path('admin_news_edit', {id: item.id}),
                                delete_url: path('admin_news_delete', {id: item.id}),
                                csrf_token: csrf_token('delete' ~ item.id)
                            }) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhuma notícia encontrada.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
