{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Newsletter{% endblock %}

{% block body %}
    <div class="mb-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Inscritos na Newsletter</h1>
        <a href="{{ path('admin_newsletter_export') }}" class="btn bg-green-600 text-white px-4 py-2 rounded shadow hover:bg-green-700 transition flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
            Exportar CSV
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 border-b border-gray-100">
                <tr>
                    <th class="p-4 font-semibold text-gray-600">ID</th>
                    <th class="p-4 font-semibold text-gray-600">E-mail</th>
                    <th class="p-4 font-semibold text-gray-600">Data de Inscrição</th>
                </tr>
            </thead>
            <tbody>
                {% for subscriber in subscribers %}
                <tr class="border-b border-gray-100/50 hover:bg-white/40 transition-colors">
                    <td class="p-4 text-sm text-gray-500">#{{ subscriber.id }}</td>
                    <td class="p-4 font-medium">{{ subscriber.email }}</td>
                    <td class="p-4 text-sm text-gray-600">{{ subscriber.createdAt|date('d/m/Y H:i') }}</td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="3" class="p-8 text-center text-gray-500">Nenhum inscrito.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
