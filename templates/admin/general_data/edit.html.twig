{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Editar Dados Gerais{% endblock %}

{% block body %}
    <div class="glass-panel p-6 rounded-2xl">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     {{ form_row(form.address) }}
                </div>
                 <div>
                     {{ form_row(form.phone) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     {{ form_row(form.email) }}
                </div>
                 <div>
                     {{ form_row(form.whatsapp) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                     {{ form_row(form.facebook) }}
                </div>
                 <div>
                     {{ form_row(form.instagram) }}
                </div>
            </div>

            <div>
                {{ form_row(form.mapEmbedCode) }}
            </div>

            <div class="flex justify-end">
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 dark:bg-blue-600/80 dark:hover:bg-blue-600 transition-colors">Atualizar</button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
