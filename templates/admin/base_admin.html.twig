                     <a href="{{ path('app_logout') }}" class="flex items-center px-4 py-3 text-sm font-medium text-red-600 rounded-xl hover:bg-red-50 hover:text-red-700 dark:text-red-400 dark:hover:bg-red-900/30 dark:hover:text-red-300 transition-all duration-200">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                        Sair do Sistema
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col h-screen overflow-hidden relative">
            
            <!-- Topbar (Glass) -->
            <header class="h-20 glass-panel border-b-0 border-l border-white/20 dark:border-white/5 m-4 mb-0 rounded-2xl flex items-center justify-between px-8 z-10 shrink-0">
                <div>
                     <nav class="flex" aria-label="Breadcrumb">
                        <ol class="inline-flex items-center space-x-1 md:space-x-3">
                            <li class="inline-flex items-center">
                                <span class="text-sm font-medium text-slate-500 dark:text-slate-400">Admin</span>
                            </li>
                            <li aria-current="page">
                                <div class="flex items-center">
                                    <svg class="w-3 h-3 text-slate-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                                    </svg>
                                    <span class="ml-1 text-sm font-semibold text-slate-800 dark:text-slate-200 md:ml-2">{% block page_title %}Dashboard{% endblock %}</span>
                                </div>
                            </li>
                        </ol>
                    </nav>
                </div>
                
                <div class="flex items-center gap-4">
                     <button class="theme-toggle-btn p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors" aria-label="Toggle theme">
                        <svg class="w-5 h-5 theme-toggle-sun hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                        <svg class="w-5 h-5 theme-toggle-moon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                        </svg>
                     </button>
                     
                     <div class="flex items-center gap-3 pl-4 border-l border-slate-200 dark:border-white/10">
                        <div class="text-right hidden md:block">
                            <span class="block text-sm font-bold text-slate-700 dark:text-slate-200">{{ app.user.email }}</span>
                            <span class="block text-xs text-slate-500 dark:text-slate-400">Administrador</span>
                        </div>
                        <div class="w-10 h-10 rounded-full bg-slate-200 dark:bg-slate-800 flex items-center justify-center text-slate-600 dark:text-slate-300 font-bold border-2 border-white dark:border-white/10 shadow-sm">
                            {{ app.user.email|first|upper }}
                        </div>
                    </div>
                </div>
            </header>

            <!-- Scrollable Area -->
            <main class="flex-1 overflow-auto p-4 md:p-6 pb-20">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="glass-panel text-sm px-6 py-4 rounded-xl mb-6 flex items-center shadow-sm {{ label == 'success' ? 'border-green-200 text-green-800 bg-green-50/50' : 'border-red-200 text-red-800 bg-red-50/50' }} animate-fade-in-down">
                            <svg class="w-5 h-5 mr-3 {{ label == 'success' ? 'text-green-500' : 'text-red-500' }}" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ label == 'success' ? 'M5 13l4 4L19 7' : 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' }}"></path></svg>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block body %}{% endblock %}
            </main>
        </div>
        <script src="{{ asset('js/theme-toggle.js') }}"></script>
    </body>
</html>
