{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Equipe Médica{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <div></div>
        <a href="{{ path('admin_doctor_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            + Novo Médico
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">ID</th>
                     <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Foto</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Nome</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">CRM</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Especialidade</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                {% for doctor in doctors %}
                    <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                        <td class="p-4 whitespace-nowrap">
                            <span class="font-medium text-gray-900 dark:text-white">{{ doctor.id }}</span>
                        </td>
                         <td class="p-4">
                            {% if doctor.imageName %}
                                <img src="{{ asset('images/team/' ~ doctor.imageName) | imagine_filter('admin_thumb') }}" class="w-10 h-10 object-cover rounded-full">
                            {% else %}
                                <span class="text-gray-400">Sem foto</span>
                            {% endif %}
                        </td>
                        <td class="p-4 text-gray-900 dark:text-gray-200">
                            {{ doctor.name }}
                        </td>
                        <td class="p-4 text-gray-900 dark:text-gray-200">
                            {{ doctor.crm }}
                        </td>
                        <td class="p-4 text-gray-900 dark:text-gray-200">
                            {{ doctor.specialty }}
                        </td>
                        <td class="p-4 text-center">
                            {{ include('admin/_partials/action_buttons.html.twig', {
                                edit_url: path('admin_doctor_edit', {id: doctor.id}),
                                delete_url: path('admin_doctor_delete', {id: doctor.id}),
                                csrf_token: csrf_token('delete' ~ doctor.id)
                            }) }}
                        </td>
                    </tr>
                {% else %}
                     <tr>
                        <td colspan="6" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhum médico encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
