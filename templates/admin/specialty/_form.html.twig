{{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
    <div class="grid gap-6">
        {# Basic Info #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                {{ form_row(form.name) }}
            </div>
            <div>
                {{ form_row(form.slug) }}
            </div>
        </div>

        <div>
            {{ form_row(form.usedToDiagnose) }}
        </div>

        <div>
            {{ form_row(form.shortDescription) }}
        </div>

        {# SVG Icon #}
        <div>
            {{ form_label(form.svgIcon, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1'}}) }}
            {{ form_widget(form.svgIcon, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 dark:bg-slate-800 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all font-mono text-xs'}}) }}
            <p class="text-xs text-slate-500 mt-1">Cole o c√≥digo &lt;svg&gt;...&lt;/svg&gt; aqui</p>
            {{ form_errors(form.svgIcon) }}
        </div>

        {# Image Upload #}
        <div>
            {{ form_row(form.imageFile) }}
        </div>

        {# Full Text with HTML Editor - Main content at the end #}
        <div>
            {{ form_label(form.fullText, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1'}}) }}
            {{ form_widget(form.fullText, {'attr': {'class': 'editor-html w-full', 'rows': 15}}) }}
            {{ form_errors(form.fullText) }}
        </div>

        {# Active & Sort Order #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                {{ form_row(form.sortOrder) }}
            </div>
            <div class="flex items-center pt-6">
                {{ form_widget(form.active) }}
                {{ form_label(form.active, null, {'label_attr': {'class': 'ml-2 text-sm font-medium text-slate-700 dark:text-slate-300'}}) }}
            </div>
        </div>
    </div>
    
    <div class="mt-8 flex justify-end">
        <button class="btn bg-blue-600 text-white px-6 py-2.5 rounded-lg shadow-md hover:bg-blue-700 transition font-medium focus:ring-4 focus:ring-blue-300">
            {{ button_label|default('Salvar') }}
        </button>
    </div>
{{ form_end(form) }}
