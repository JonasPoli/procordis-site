{{ form_start(form) }}
    <div class="grid gap-6">
        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-1'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all'}}) }}
            {{ form_errors(form.name) }}
        </div>
        
        <div>
            {{ form_widget(form.active) }}
            {{ form_label(form.active, null, {'label_attr': {'class': 'ml-2 text-sm font-medium text-slate-700'}}) }}
            {{ form_errors(form.active) }}
        </div>

        <div>
            {{ form_label(form.sortOrder, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-1'}}) }}
            {{ form_widget(form.sortOrder, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all'}}) }}
            {{ form_errors(form.sortOrder) }}
        </div>

        <div>
            {{ form_label(form.svgIcon, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 mb-1'}}) }}
            {{ form_widget(form.svgIcon, {'attr': {'class': 'w-full px-4 py-2 rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all font-mono text-xs'}}) }}
            <p class="text-xs text-slate-500 mt-1">{{ form_help(form.svgIcon) }}</p>
            {{ form_errors(form.svgIcon) }}
        </div>
    </div>
    
    <div class="mt-8 flex justify-end">
        <button class="btn bg-blue-600 text-white px-6 py-2.5 rounded-lg shadow-md hover:bg-blue-700 transition font-medium focus:ring-4 focus:ring-blue-300">
            {{ button_label|default('Salvar') }}
        </button>
    </div>
{{ form_end(form) }}
