{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Editar Especialidade{% endblock %}

{% block body %}
    <div class="glass-panel text-sm px-6 py-6 rounded-xl shadow-sm">
        <div class="mb-6 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100">Editar Especialidade</h2>
            <a href="{{ path('admin_specialty_index') }}" class="text-slate-500 hover:text-slate-700 dark:hover:text-slate-300 transition-colors">&larr; Voltar</a>
        </div>
        
        {% if form.vars.errors|length > 0 %}
        <div class="mb-6 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg">
            <h3 class="text-red-700 dark:text-red-400 font-bold mb-2">Erros no formul√°rio:</h3>
            {{ form_errors(form) }}
        </div>
        {% endif %}
        
        {{ include('admin/specialty/_form.html.twig', {'button_label': 'Atualizar'}) }}
        
        <div class="mt-8 border-t border-slate-200 dark:border-white/10 pt-6">
            {{ include('admin/specialty/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
