{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Variáveis do Sistema{% endblock %}

{% block body %}
    <div class="mb-4">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Variáveis do Sistema</h1>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Chave</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Descrição</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Valor (Resumido)</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for variable in variables %}
                <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                    <td class="p-4 font-mono text-sm text-gray-900 dark:text-gray-300">{{ variable.variableKey }}</td>
                    <td class="p-4 text-sm text-gray-700 dark:text-gray-300">{{ variable.description }}</td>
                    <td class="p-4 text-sm text-gray-500 dark:text-gray-400">{{ variable.variableValue|length > 50 ? variable.variableValue|slice(0, 50) ~ '...' : variable.variableValue }}</td>
                    <td class="p-4 text-right">
                        {{ include('admin/_partials/action_buttons.html.twig', {
                            edit_url: path('admin_system_variable_edit', {id: variable.id})
                        }) }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhuma variável encontrada.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
