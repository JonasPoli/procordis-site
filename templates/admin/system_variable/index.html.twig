{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Variáveis do Sistema{% endblock %}

{% block body %}
    <div class="mb-4">
        <h1 class="text-2xl font-bold">Variáveis do Sistema</h1>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 border-b border-gray-100">
                <tr>
                    <th class="p-4 font-semibold text-gray-600">Chave</th>
                    <th class="p-4 font-semibold text-gray-600">Descrição</th>
                    <th class="p-4 font-semibold text-gray-600">Valor (Resumido)</th>
                    <th class="p-4 font-semibold text-gray-600 text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for variable in variables %}
                <tr class="border-b border-gray-100/50 hover:bg-white/40 transition-colors">
                    <td class="p-4 font-mono text-sm">{{ variable.variableKey }}</td>
                    <td class="p-4 text-sm">{{ variable.description }}</td>
                    <td class="p-4 text-sm text-gray-500">{{ variable.variableValue|length > 50 ? variable.variableValue|slice(0, 50) ~ '...' : variable.variableValue }}</td>
                    <td class="p-4 text-right">
                        <a href="{{ path('admin_system_variable_edit', {'id': variable.id}) }}" class="inline-flex items-center px-3 py-1.5 border border-slate-200 rounded-lg text-xs font-medium text-slate-600 bg-white hover:bg-slate-50 hover:text-blue-600 hover:border-blue-300 transition-all shadow-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" /></svg>
                            Editar
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="p-8 text-center text-gray-500">Nenhuma variável encontrada.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
