{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Editar Variável{% endblock %}

{% block body %}
    <div class="glass-panel text-sm px-6 py-6 rounded-xl shadow-sm max-w-2xl mx-auto">
        <div class="mb-6 flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100">Editar Variável</h2>
            <a href="{{ path('admin_system_variable_index') }}" class="text-slate-500 hover:text-slate-700 dark:hover:text-slate-300 transition-colors">&larr; Voltar</a>
        </div>

        {{ form_start(form) }}
            <div class="space-y-4">
                <div>
                    {{ form_label(form.variableKey, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1'}}) }}
                    {{ form_widget(form.variableKey) }}
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">A chave identifica a variável no sistema e não deve ser alterada levianamente.</p>
                </div>
                 <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1'}}) }}
                    {{ form_widget(form.description) }}
                </div>
                <div>
                    {{ form_label(form.variableValue, null, {'label_attr': {'class': 'block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1'}}) }}
                    {{ form_widget(form.variableValue) }}
                </div>
            </div>

            <div class="mt-8 flex justify-end">
                <button class="btn bg-blue-600 text-white px-6 py-2.5 rounded-lg shadow-md hover:bg-blue-700 dark:bg-blue-600/80 dark:hover:bg-blue-600 transition font-medium">
                    Salvar Alterações
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
