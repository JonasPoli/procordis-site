{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Mensagens de Contato{% endblock %}

{% block body %}
    <div class="mb-4">
        <h1 class="text-2xl font-bold">Mensagens de Contato</h1>
    </div>

    <div class="grid gap-4">
        {% for message in messages %}
        <div class="glass-panel p-6 rounded-xl shadow-sm hover:shadow-md transition-all border-l-4 {{ message.status == 'new' ? 'border-l-blue-500 bg-blue-50/30' : 'border-l-gray-300' }}">
            <div class="flex justify-between items-start mb-2">
                <div>
                    <h3 class="font-bold text-lg text-gray-800">{{ message.subject }}</h3>
                    <div class="text-sm text-gray-500 flex items-center gap-3 mt-1">
                        <span class="flex items-center"><svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg> {{ message.name }}</span>
                        <span class="flex items-center"><svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg> {{ message.email }}</span>
                        {% if message.phone %}
                        <span class="flex items-center"><svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg> {{ message.phone }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="text-xs text-gray-400 font-mono">
                    {{ message.createdAt|date('d/m/Y H:i') }}
                </div>
            </div>
            
            <div class="bg-white/50 p-4 rounded-lg border border-gray-100 text-gray-700 whitespace-pre-line">
                {{ message.message }}
            </div>
        </div>
        {% else %}
        <div class="p-12 text-center text-gray-500 bg-gray-50 rounded-xl">
            Nenhuma mensagem recebida.
        </div>
        {% endfor %}
    </div>
{% endblock %}
