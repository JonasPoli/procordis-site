{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Transparência{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <div></div>
        <a href="{{ path('admin_transparency_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            + Novo Documento
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">ID</th>
                     <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Título</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Referência</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Arquivo</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 dark:text-gray-300 text-sm font-light">
                {% for doc in docs %}
                    <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                        <td class="p-4 whitespace-nowrap">
                            <span class="font-medium text-gray-900 dark:text-white">{{ doc.id }}</span>
                        </td>
                        <td class="p-4 font-medium text-gray-900 dark:text-gray-200">
                            {{ doc.title }}
                        </td>
                        <td class="p-4">
                            {{ doc.month ? doc.month ~ '/' : '' }}{{ doc.year }}
                        </td>
                         <td class="p-4">
                            {% if doc.fileName %}
                                <a href="{{ asset('files/transparency/' ~ doc.fileName) }}" target="_blank" class="text-blue-500 hover:underline">Download</a>
                            {% else %}
                                <span class="text-gray-400">Sem arquivo</span>
                            {% endif %}
                        </td>
                        <td class="p-4 text-center">
                            {{ include('admin/_partials/action_buttons.html.twig', {
                                edit_url: path('admin_transparency_edit', {id: doc.id}),
                                delete_url: path('admin_transparency_delete', {id: doc.id}),
                                csrf_token: csrf_token('delete' ~ doc.id)
                            }) }}
                        </td>
                    </tr>
                {% else %}
                     <tr>
                        <td colspan="5" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhum documento encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
