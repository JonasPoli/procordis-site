{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Transparência{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <div></div>
        <a href="{{ path('admin_transparency_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            + Novo Documento
        </a>
    </div>

    <div class="bg-white shadow-md rounded my-6 overflow-x-auto">
        <table class="min-w-full w-full table-auto">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">ID</th>
                     <th class="py-3 px-6 text-left">Título</th>
                    <th class="py-3 px-6 text-left">Referência</th>
                    <th class="py-3 px-6 text-left">Arquivo</th>
                    <th class="py-3 px-6 text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                {% for doc in docs %}
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left whitespace-nowrap">
                            <span class="font-medium">{{ doc.id }}</span>
                        </td>
                        <td class="py-3 px-6 text-left">
                            {{ doc.title }}
                        </td>
                        <td class="py-3 px-6 text-left">
                            {{ doc.month ? doc.month ~ '/' : '' }}{{ doc.year }}
                        </td>
                         <td class="py-3 px-6 text-left">
                            {% if doc.fileName %}
                                <a href="{{ asset('files/transparency/' ~ doc.fileName) }}" target="_blank" class="text-blue-500 hover:underline">Download</a>
                            {% else %}
                                <span class="text-gray-400">Sem arquivo</span>
                            {% endif %}
                        </td>
                        <td class="py-3 px-6 text-center">
                            <div class="flex item-center justify-center">
                                <a href="{{ path('admin_transparency_edit', {'id': doc.id}) }}" class="inline-flex items-center px-3 py-1.5 border border-slate-200 rounded-lg text-xs font-medium text-slate-600 bg-white hover:bg-slate-50 hover:text-blue-600 hover:border-blue-300 transition-all shadow-sm mr-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" /></svg>
                                    Editar
                                </a>
                                {{ include('admin/transparency/_delete_form.html.twig', {'doc': doc}) }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                     <tr>
                        <td colspan="5" class="py-3 px-6 text-center">Nenhum documento encontrado.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
