{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Banners da Home{% endblock %}

{% block body %}
    <div class="mb-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Banners da Home</h1>
        <a href="{{ path('admin_banner_new') }}" class="btn bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
            + Novo Banner
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 border-b border-gray-100">
                <tr>
                    <th class="p-4 font-semibold text-gray-600">Imagem</th>
                    <th class="p-4 font-semibold text-gray-600">Título</th>
                    <th class="p-4 font-semibold text-gray-600">Ordem</th>
                    <th class="p-4 font-semibold text-gray-600">Ativo</th>
                    <th class="p-4 font-semibold text-gray-600 text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for banner in banners %}
                <tr class="border-b border-gray-100/50 hover:bg-white/40 transition-colors">
                    <td class="p-4">
                        {% if banner.imageName %}
                            <img src="{{ vich_uploader_asset(banner, 'imageFile') }}" class="h-12 w-20 object-cover rounded" alt="Banner">
                        {% else %}
                            <span class="text-gray-400 italic">Sem imagem</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-sm font-medium">{{ banner.title }}</td>
                    <td class="p-4 text-sm">{{ banner.sortOrder }}</td>
                    <td class="p-4">
                         {% if banner.active %}
                            <span class="px-2 py-1 text-xs font-bold text-green-700 bg-green-100 rounded-full">Sim</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs font-bold text-red-700 bg-red-100 rounded-full">Não</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-right">
                        <a href="{{ path('admin_banner_edit', {'id': banner.id}) }}" class="inline-flex items-center px-3 py-1.5 border border-slate-200 rounded-lg text-xs font-medium text-slate-600 bg-white hover:bg-slate-50 hover:text-blue-600 hover:border-blue-300 transition-all shadow-sm mr-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" /></svg>
                            Editar
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="p-8 text-center text-gray-500">Nenhum banner cadastrado.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
