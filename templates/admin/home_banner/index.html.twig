{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Banners da Home{% endblock %}

{% block body %}
    <div class="mb-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Banners da Home</h1>
        <a href="{{ path('admin_banner_new') }}" class="btn bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
            + Novo Banner
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 dark:bg-slate-800/50 border-b border-gray-100 dark:border-white/10">
                <tr>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Imagem</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Título</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Ordem</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400">Ativo</th>
                    <th class="p-4 font-semibold text-gray-600 dark:text-gray-400 text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 dark:text-gray-300 text-sm font-light">
                {% for banner in banners %}
                <tr class="border-b border-gray-100/50 dark:border-white/5 hover:bg-white/40 dark:hover:bg-white/5 transition-colors">
                    <td class="p-4">
                        {% if banner.imageName %}
                            <img src="{{ vich_uploader_asset(banner, 'imageFile') }}" class="h-12 w-20 object-cover rounded" alt="Banner">
                        {% else %}
                            <span class="text-gray-400 italic">Sem imagem</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-sm font-medium text-gray-900 dark:text-white">{{ banner.title }}</td>
                    <td class="p-4 text-sm">{{ banner.sortOrder }}</td>
                    <td class="p-4">
                         {% if banner.active %}
                            <span class="px-2 py-1 text-xs font-bold text-green-700 bg-green-100 rounded-full">Sim</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs font-bold text-red-700 bg-red-100 rounded-full">Não</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-right">
                        {{ include('admin/_partials/action_buttons.html.twig', {
                            edit_url: path('admin_banner_edit', {id: banner.id}),
                            delete_url: path('admin_banner_delete', {id: banner.id}),
                            csrf_token: csrf_token('delete' ~ banner.id)
                        }) }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="p-8 text-center text-gray-500 dark:text-gray-400">Nenhum banner cadastrado.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
