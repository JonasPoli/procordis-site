{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Editar SEO das Páginas{% endblock %}

{% block body %}
    <div class="bg-white shadow rounded-lg p-6">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="border-b pb-4 mb-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Página Inicial (Home)</h3>
                <div class="space-y-4">
                    {{ form_row(form.homePageTitle) }}
                    {{ form_row(form.homePageDescription) }}
                </div>
            </div>

            <div class="border-b pb-4 mb-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Quem Somos</h3>
                <div class="space-y-4">
                    {{ form_row(form.aboutPageTitle) }}
                    {{ form_row(form.aboutPageDescription) }}
                </div>
            </div>

            <div class="border-b pb-4 mb-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Serviços</h3>
                <div class="space-y-4">
                    {{ form_row(form.servicesPageTitle) }}
                    {{ form_row(form.servicesPageDescription) }}
                </div>
            </div>

            <div class="border-b pb-4 mb-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Notícias</h3>
                <div class="space-y-4">
                    {{ form_row(form.newsPageTitle) }}
                    {{ form_row(form.newsPageDescription) }}
                </div>
            </div>

            <div class="border-b pb-4 mb-4">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Contato</h3>
                <div class="space-y-4">
                    {{ form_row(form.contactPageTitle) }}
                    {{ form_row(form.contactPageDescription) }}
                </div>
            </div>

            <div class="flex justify-end">
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Atualizar SEO</button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
