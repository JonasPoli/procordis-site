{% extends 'admin/base_admin.html.twig' %}

{% block page_title %}Depoimentos{% endblock %}

{% block body %}
    <div class="mb-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">Gestão de Depoimentos</h1>
        <a href="{{ path('admin_testimony_new') }}" class="btn bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
            + Novo Depoimento
        </a>
    </div>

    <div class="glass-panel overflow-hidden rounded-xl">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50/50 border-b border-gray-100">
                <tr>
                    <th class="p-4 font-semibold text-gray-600">Autor</th>
                    <th class="p-4 font-semibold text-gray-600">Avaliação</th>
                    <th class="p-4 font-semibold text-gray-600">Data</th>
                    <th class="p-4 font-semibold text-gray-600">Ativo</th>
                    <th class="p-4 font-semibold text-gray-600 text-right">Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for testimony in testimonies %}
                <tr class="border-b border-gray-100/50 hover:bg-white/40 transition-colors">
                    <td class="p-4">
                        <div class="font-medium">{{ testimony.authorName }}</div>
                        <div class="text-xs text-gray-500">{{ testimony.authorRole }}</div>
                    </td>
                    <td class="p-4">
                        <div class="flex text-yellow-400">
                            {% for i in 1..5 %}
                                {% if i <= testimony.rating %}★{% else %}<span class="text-gray-300">★</span>{% endif %}
                            {% endfor %}
                        </div>
                    </td>
                    <td class="p-4 text-sm text-gray-600">{{ testimony.createdAt|date('d/m/Y') }}</td>
                    <td class="p-4">
                        {% if testimony.active %}
                            <span class="px-2 py-1 text-xs font-bold text-green-700 bg-green-100 rounded-full">Sim</span>
                        {% else %}
                            <span class="px-2 py-1 text-xs font-bold text-red-700 bg-red-100 rounded-full">Não</span>
                        {% endif %}
                    </td>
                    <td class="p-4 text-right">
                        {{ include('admin/_partials/action_buttons.html.twig', {
                            edit_url: path('admin_testimony_edit', {id: testimony.id}),
                            delete_url: path('admin_testimony_delete', {id: testimony.id}),
                            csrf_token: csrf_token('delete' ~ testimony.id)
                        }) }}
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="p-8 text-center text-gray-500">Nenhum depoimento cadastrado.</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
