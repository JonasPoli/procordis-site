{% extends 'admin/base_admin.html.twig' %}

{% block title %}Categorias de Notícias{% endblock %}
{% block page_title %}Categorias de Notícias{% endblock %}

{% block body %}
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">Listagem de Categorias</h1>
        <a href="{{ path('admin_news_category_new') }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Nova Categoria
        </a>
    </div>

    <div class="glass-panel rounded-2xl overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="border-b border-slate-200/60 text-slate-500 text-sm uppercase tracking-wider">
                        <th class="p-6 font-semibold">ID</th>
                        <th class="p-6 font-semibold">Título</th>
                        <th class="p-6 font-semibold">Slug</th>
                        <th class="p-6 font-semibold">Ativo</th>
                        <th class="p-6 font-semibold">Ações</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                {% for category in news_categories %}
                    <tr class="hover:bg-blue-50/30 transition-colors">
                        <td class="p-6 text-slate-600">{{ category.id }}</td>
                        <td class="p-6 font-medium text-slate-800">{{ category.title }}</td>
                        <td class="p-6 text-slate-500">{{ category.slug }}</td>
                        <td class="p-6">
                            {% if category.active %}
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700">Ativo</span>
                            {% else %}
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-700">Inativo</span>
                            {% endif %}
                        </td>
                        <td class="p-6">
                            <div class="flex gap-2">
                                <a href="{{ path('admin_news_category_edit', {'id': category.id}) }}" class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Editar">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                </a>
                                {{ include('admin/news_category/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="p-8 text-center text-slate-500">Nenhuma categoria encontrada.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
