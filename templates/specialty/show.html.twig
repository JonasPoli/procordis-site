{% extends 'base_public.html.twig' %}

{% block title %}{{ specialty.name }} - Procordis{% endblock %}

{% block seo_schema %}
{% set specialty_map = {
    'Cardiologia Clínica': 'Cardiology',
    'Cardiologia': 'Cardiology',
    'Neurologia': 'Neurology',
    'Traumatologia': 'Orthopedics',
    'Nefrologia': 'Nephrology',
    'Pneumologia': 'Pulmonary',
    'Ginecologia': 'Gynecology',
    'Obstetrícia': 'Obstetrics',
    'Odontologia': 'Dentistry',
    'Dermatologia': 'Dermatology',
    'Endocrinologia': 'Endocrinology',
    'Gastroenterologia': 'Gastroenterology',
    'Geriatria': 'Geriatric',
    'Hematologia': 'Hematology',
    'Oncologia': 'Oncology',
    'Pediatria': 'Pediatrics',
    'Psiquiatria': 'Psychiatric',
    'Reumatologia': 'Rheumatologic',
    'Urologia': 'Urologic'
} %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "MedicalSpecialty",
    "name": "{{ specialty.name }}",
    "medicalSpecialty": "{{ specialty_map[specialty.name] is defined ? specialty_map[specialty.name] : 'MedicalSpecialty' }}",
    "description": "{{ specialty.shortDescription|default(specialty.usedToDiagnose)|e('js') }}"
}
</script>
{% endblock %}

{% block content %}
    {# Hero Section #}
    <div class="bg-[#2993C9] dark:bg-[#031219] text-primary-foreground py-20 text-center relative overflow-hidden">
        <div class="absolute inset-0 z-0 bg-cover bg-center opacity-20" style="background-image: url('{{ asset('images/background02.png') }}'); filter: grayscale(100%);"></div>
        <div class="container mx-auto px-6 relative z-10 text-center">
            
            {# Breadcrumb #}
            <nav class="flex justify-center items-center gap-2 text-sm text-primary-foreground/80 mb-6" aria-label="Breadcrumb">
                <a href="{{ path('app_home') }}" class="hover:text-white transition-colors">Início</a>
                <span class="opacity-50">/</span>
                <a href="{{ path('app_home') }}#specialties" class="hover:text-white transition-colors">Especialidades</a>
                <span class="opacity-50">/</span>
                <span class="font-medium text-white">{{ specialty.name }}</span>
            </nav>

            <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4" data-aos="fade-up">{{ specialty.name }}</h1>
            {% if specialty.usedToDiagnose %}
            <p class="text-xl opacity-90 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
                {{ specialty.usedToDiagnose }}
            </p>
            {% endif %}
        </div>
    </div>

    {# Content Section #}
    <section class="py-16 bg-background">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-24">
                
                {# Main Content - 2/3 #}
                <div class="lg:col-span-2 order-2 lg:order-1">
                    {# Image if exists #}
                    {% if specialty.imageName %}
                    <div class="rounded-xl overflow-hidden mb-8 shadow-lg">
                        <img src="{{ vich_uploader_asset(specialty, 'imageFile') }}" 
                             alt="{{ specialty.name }}" 
                             class="w-full h-64 md:h-80 object-cover">
                    </div>
                    {% endif %}

                    {# Short Description #}
                    {% if specialty.shortDescription %}
                    <div class="bg-primary/5 dark:bg-primary/10 border-l-4 border-primary rounded-r-xl p-6 mb-8">
                        <p class="text-lg text-medical-text dark:text-slate-300 italic leading-relaxed">
                            {{ specialty.shortDescription }}
                        </p>
                    </div>
                    {% endif %}

                    {# Full Content #}
                    <div class="bg-card rounded-xl p-6 md:p-8 shadow-sm border border-border">
                        <div class="specialty-content text-medical-text dark:text-slate-300">
                            {{ specialty.fullText|raw }}
                        </div>
                    </div>

                    {# Back Link #}
                    <div class="mt-10">
                        <a href="{{ path('app_home') }}#specialties" class="inline-flex items-center text-primary hover:underline font-medium">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Voltar para Especialidades
                        </a>
                    </div>
                </div>

                {# Sidebar - 1/3 #}
                <div class="lg:col-span-1 order-1 lg:order-2">
                    <div class="sticky top-8 space-y-6">
                        
                        {# Specialties Menu #}
                        <div class="bg-card rounded-xl p-6 shadow-sm border border-border">
                            <h3 class="font-bold text-lg text-foreground mb-5 pb-4 border-b border-border flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Outras Especialidades
                            </h3>
                            <nav class="space-y-2">
                                {% for item in specialties %}
                                <a href="{{ path('app_specialty_show', {slug: item.slug}) }}" 
                                   class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm transition-all {{ item.id == specialty.id ? 'bg-primary/10 text-primary font-semibold' : 'text-muted-foreground hover:bg-muted hover:text-foreground' }}">
                                    <div class="w-5 h-5 flex items-center justify-center shrink-0">
                                        {{ item.svgIcon|raw }}
                                    </div>
                                    <span class="truncate">{{ item.name }}</span>
                                </a>
                                {% endfor %}
                            </nav>
                        </div>

                        {# Referral Notice #}
                        <div class="bg-amber-50 dark:bg-amber-900/20 rounded-xl p-5 border border-amber-200 dark:border-amber-700/50">
                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 bg-amber-100 dark:bg-amber-800/50 rounded-full flex items-center justify-center shrink-0">
                                    <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-amber-800 dark:text-amber-300 mb-1">Atendimento por Encaminhamento</h4>
                                    <p class="text-amber-700 dark:text-amber-400/80 text-sm leading-relaxed">
                                        Nosso ambulatório atende exclusivamente pacientes encaminhados pelo sistema de saúde.
                                    </p>
                                </div>
                            </div>
                        </div>

                        {# Contact Card #}
                        <div class="bg-card rounded-xl p-6 shadow-sm border border-border">
                            <h4 class="font-bold text-foreground mb-2">Dúvidas?</h4>
                            <p class="text-muted-foreground text-sm mb-4">Entre em contato conosco para mais informações.</p>
                            <a href="{{ path('app_home') }}#contact" class="block w-full text-center bg-primary text-white font-semibold py-3 rounded-lg hover:bg-primary/90 transition-colors">
                                Fale Conosco
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Custom CSS for HTML content #}
    <style>
        .specialty-content h2 {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-foreground);
            margin-top: 1.5rem;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid var(--color-primary);
        }
        .specialty-content h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--color-foreground);
            margin-top: 1.25rem;
            margin-bottom: 0.75rem;
        }
        .specialty-content p {
            margin-bottom: 1rem;
            line-height: 1.75;
        }
        .specialty-content ul, .specialty-content ol {
            margin-left: 1.5rem;
            margin-bottom: 1rem;
        }
        .specialty-content li {
            margin-bottom: 0.5rem;
        }
        .specialty-content a {
            color: var(--color-primary);
            text-decoration: underline;
        }
        .specialty-content a:hover {
            text-decoration: none;
        }
        .specialty-content strong {
            font-weight: 600;
            color: var(--color-foreground);
        }
    </style>
{% endblock %}
