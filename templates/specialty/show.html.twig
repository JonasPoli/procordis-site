{% extends 'base_public.html.twig' %}

{% block title %}{{ specialty.name }} - Procordis{% endblock %}

{% block seo_schema %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "MedicalTest",
    "name": "{{ specialty.name }}",
    "usedToDiagnose": "{{ specialty.usedToDiagnose|default(specialty.shortDescription|default(''))|e('js') }}"
}
</script>
{% endblock %}

{% block body %}
<main class="bg-background min-h-screen">
    {# Hero Section #}
    <section class="bg-[#2993C9] dark:bg-[#031219] text-primary-foreground py-20 relative overflow-hidden">
        <div class="absolute inset-0 z-0 bg-cover bg-center opacity-20" style="background-image: url('{{ asset('images/background02.png') }}'); filter: grayscale(100%);"></div>
        <div class="container mx-auto px-6 relative z-10">
            <div class="flex flex-col md:flex-row items-center gap-6">
                {# Icon #}
                <div class="w-16 h-16 flex items-center justify-center text-primary bg-white rounded-xl shadow-lg">
                    {{ specialty.svgIcon|raw }}
                </div>
                <div class="text-center md:text-left">
                    {# Breadcrumb #}
                    <nav class="flex items-center gap-2 text-sm text-primary-foreground/80 mb-3 justify-center md:justify-start">
                        <a href="{{ path('app_home') }}" class="hover:text-white transition-colors">Início</a>
                        <span class="opacity-50">/</span>
                        <a href="{{ path('app_home') }}#specialties" class="hover:text-white transition-colors">Especialidades</a>
                        <span class="opacity-50">/</span>
                        <span class="text-white font-medium">{{ specialty.name }}</span>
                    </nav>
                    
                    <h1 class="text-3xl md:text-4xl font-heading font-bold text-white mb-2">
                        {{ specialty.name }}
                    </h1>
                    {% if specialty.usedToDiagnose %}
                    <p class="text-white/90">
                        {{ specialty.usedToDiagnose }}
                    </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {# Content Section #}
    <section class="py-12 md:py-16">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-8">
                
                {# Main Content #}
                <div class="lg:w-2/3 order-2 lg:order-1">
                    {# Image if exists #}
                    {% if specialty.imageName %}
                    <div class="rounded-xl overflow-hidden mb-8 shadow-lg">
                        <img src="{{ vich_uploader_asset(specialty, 'imageFile') }}" 
                             alt="{{ specialty.name }}" 
                             class="w-full h-64 md:h-80 object-cover">
                    </div>
                    {% endif %}

                    {% if specialty.shortDescription %}
                    <div class="bg-primary/5 dark:bg-primary/10 border-l-4 border-primary rounded-r-xl p-5 mb-8">
                        <p class="text-medical-text dark:text-slate-300 italic">
                            {{ specialty.shortDescription }}
                        </p>
                    </div>
                    {% endif %}

                    <div class="bg-white dark:bg-card rounded-xl p-6 md:p-8 shadow-sm border border-slate-200 dark:border-slate-700">
                        <div class="prose prose-slate dark:prose-invert max-w-none 
                                    prose-headings:text-medical-heading dark:prose-headings:text-white
                                    prose-p:text-medical-text dark:prose-p:text-slate-300
                                    prose-a:text-primary prose-a:no-underline hover:prose-a:underline
                                    prose-strong:text-medical-heading dark:prose-strong:text-white
                                    prose-ul:text-medical-text dark:prose-ul:text-slate-300
                                    prose-li:my-1">
                            {{ specialty.fullText|raw }}
                        </div>
                    </div>

                    {# Back Link #}
                    <div class="mt-8">
                        <a href="{{ path('app_home') }}#specialties" class="inline-flex items-center text-primary hover:underline font-medium">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Voltar para Especialidades
                        </a>
                    </div>
                </div>

                {# Sidebar #}
                <div class="lg:w-1/3 order-1 lg:order-2">
                    <div class="sticky top-8 space-y-6">
                        {# Specialties Menu #}
                        <div class="bg-white dark:bg-card rounded-xl p-5 shadow-sm border border-slate-200 dark:border-slate-700">
                            <h3 class="font-bold text-base text-medical-heading dark:text-white mb-4 flex items-center gap-2">
                                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Outras Especialidades
                            </h3>
                            <nav class="space-y-1">
                                {% for item in specialties %}
                                <a href="{{ path('app_specialty_show', {slug: item.slug}) }}" 
                                   class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm transition-all {{ item.id == specialty.id ? 'bg-primary/10 text-primary font-semibold' : 'text-medical-text dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800' }}">
                                    <div class="w-5 h-5 flex items-center justify-center shrink-0 {{ item.id == specialty.id ? 'text-primary' : 'text-slate-400' }}">
                                        {{ item.svgIcon|raw }}
                                    </div>
                                    <span class="truncate">{{ item.name }}</span>
                                </a>
                                {% endfor %}
                            </nav>
                        </div>

                        {# Referral Notice #}
                        <div class="bg-amber-50 dark:bg-amber-900/20 rounded-xl p-5 border border-amber-200 dark:border-amber-800">
                            <div class="flex items-start gap-3">
                                <div class="w-10 h-10 bg-amber-100 dark:bg-amber-800 rounded-lg flex items-center justify-center shrink-0">
                                    <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="font-bold text-amber-800 dark:text-amber-400 text-sm mb-1">Atendimento por Encaminhamento</h4>
                                    <p class="text-amber-700 dark:text-amber-300 text-xs leading-relaxed">
                                        Nosso ambulatório atende exclusivamente pacientes encaminhados pelo sistema de saúde.
                                    </p>
                                </div>
                            </div>
                        </div>

                        {# Contact Card #}
                        <div class="bg-primary dark:bg-slate-800 rounded-xl p-5 text-white">
                            <h4 class="font-bold text-sm mb-2">Dúvidas?</h4>
                            <p class="text-white/80 text-xs mb-4">Entre em contato conosco.</p>
                            <a href="{{ path('app_contact') }}" class="block w-full text-center bg-white text-primary dark:text-slate-800 font-semibold py-2.5 rounded-lg text-sm hover:bg-white/90 transition-colors">
                                Fale Conosco
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}
