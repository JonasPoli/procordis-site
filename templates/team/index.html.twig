{% extends 'base.html.twig' %}

{% block title %}Corpo Clínico - Procordis{% endblock %}

{% block content %}
    <!-- Hero Small -->
    <div class="bg-primary-900 py-32 text-center text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/medical-icons.png')] opacity-10"></div>
        <div class="relative z-10 container mx-auto px-6">
            <h1 class="text-4xl md:text-5xl font-display font-bold mb-4 animate-fade-in-up">Corpo Clínico</h1>
            <p class="text-primary-200 text-lg max-w-2xl mx-auto animate-fade-in-up delay-100">Conheça nossa equipe de especialistas dedicados à sua saúde.</p>
        </div>
    </div>

    <!-- Team Grid -->
    <section class="py-24 bg-slate-50">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {% for doctor in doctors %}
                    <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group ring-1 ring-slate-100" data-aos="fade-up" data-aos-delay="{{ loop.index * 50 }}">
                        <div class="relative h-72 overflow-hidden bg-slate-200">
                             {% if doctor.imageName %}
                                <img src="{{ asset('images/doctors/' ~ doctor.imageName) }}" alt="{{ doctor.name }}" class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700">
                            {% else %}
                                <div class="w-full h-full flex items-center justify-center text-slate-400 bg-slate-100">
                                    <svg class="w-24 h-24 opacity-50" fill="currentColor" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
                                </div>
                            {% endif %}
                            
                            <!-- Overlay Action -->
                            <div class="absolute inset-x-0 bottom-0 p-4 bg-gradient-to-t from-primary-900/90 to-transparent flex justify-center translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                                <span class="px-6 py-2 bg-white text-primary-700 font-bold rounded-full text-sm">
                                    Ver Perfil
                                </span>
                            </div>
                        </div>
                        <div class="p-6 text-center">
                            <h3 class="text-xl font-display font-bold text-slate-900 mb-1 group-hover:text-primary-600 transition-colors">{{ doctor.name }}</h3>
                            <p class="text-primary-600 font-bold text-xs uppercase tracking-widest mb-3">{{ doctor.specialty|default('Especialista') }}</p>
                            
                            {% if doctor.crm %}
                                <span class="inline-block px-3 py-1 bg-slate-100 text-slate-500 text-xs rounded-full font-medium mb-3">
                                    {{ doctor.crm }}
                                </span>
                            {% endif %}

                            {% if doctor.bio %}
                                <p class="text-slate-500 text-sm line-clamp-2 leading-relaxed px-2">
                                    {{ doctor.bio }}
                                </p>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-4 text-center py-20">
                        <div class="inline-block p-6 rounded-full bg-slate-100 mb-4">
                            <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 005.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                        </div>
                        <h3 class="text-lg font-bold text-slate-700">Nenhum especialista encontrado.</h3>
                        <p class="text-slate-500">Volte em breve para conhecer nossa equipe.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
