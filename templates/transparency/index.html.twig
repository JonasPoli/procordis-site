{% extends 'base_public.html.twig' %}

{% block title %}Portal da Transparência{% endblock %}

{% block content %}
    {# Hero Standardized #}
    <div class="bg-[#2993C9] dark:bg-[#031219] text-primary-foreground py-20 text-center relative overflow-hidden">
         <div class="absolute inset-0 z-0 bg-cover bg-center opacity-20" style="background-image: url('{{ asset('images/background02.png') }}'); filter: grayscale(100%);"></div>
         <div class="container mx-auto px-6 relative z-10 text-center">
            
            {# Breadcrumb #}
            <nav class="flex justify-center items-center gap-2 text-sm text-primary-foreground/80 mb-6" aria-label="Breadcrumb">
                <a href="{{ path('app_home') }}" class="hover:text-white transition-colors">Início</a>
                <span class="opacity-50">/</span>
                <span class="font-medium text-white">Transparência</span>
            </nav>

            <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4" data-aos="fade-up">Portal da Transparência</h1>
            <p class="text-xl opacity-90 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
                Prestação de contas e documentos oficiais da Associação Procordis.
            </p>
        </div>
    </div>

    <section class="py-16 bg-background">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for item in transparencies %}
                    <a href="{{ path('app_transparency_show', {slug: item.slug}) }}" class="block p-6 bg-card border border-border rounded-xl shadow-sm hover:shadow-md hover:border-primary transition-all group">
                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-12 h-12 bg-primary/10 dark:bg-primary/20 text-primary rounded-lg flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors">
                                <i data-lucide="file-text" class="w-6 h-6"></i>
                            </div>
                            <h2 class="text-xl font-bold text-foreground group-hover:text-primary transition-colors">{{ item.title }}</h2>
                        </div>
                        <p class="text-muted-foreground text-sm line-clamp-2">{{ item.description }}</p>
                        <div class="mt-4 text-xs font-semibold text-primary flex items-center gap-1">
                            {{ item.documents|length }} Documentos
                            <i data-lucide="arrow-right" class="w-4 h-4"></i>
                        </div>
                    </a>
                {% else %}
                    <p class="text-muted-foreground">Nenhum item de transparência encontrado.</p>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
