{% extends 'base_public.html.twig' %}

{% block title %}Notícias - Procordis{% endblock %}
{% block meta_description %}Fique por dentro das últimas notícias, artigos e atualizações da Procordis.{% endblock %}

{% block content %}
    {# Hero Standardized #}
    <div class="bg-[#2993C9] dark:bg-[#031219] text-primary-foreground py-20 text-center relative overflow-hidden">
         <div class="absolute inset-0 z-0 bg-cover bg-center opacity-20" style="background-image: url('{{ asset('images/background02.png')|imagine_filter('page_header') }}'); filter: grayscale(100%);"></div>
         <div class="container mx-auto px-6 relative z-10 text-center">
            
            {# Breadcrumb #}
            <nav class="flex justify-center items-center gap-2 text-sm text-primary-foreground/80 mb-6" aria-label="Breadcrumb">
                <a href="{{ path('app_home') }}" class="hover:text-white transition-colors">Início</a>
                <span class="opacity-50">/</span>
                <span class="font-medium text-white">Notícias</span>
            </nav>

            <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4" data-aos="fade-up">Notícias</h1>
            <p class="text-xl opacity-90 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
                Fique por dentro das últimas notícias, artigos e atualizações da Procordis.
            </p>
        </div>
    </div>

    {# Content Section #}
    <section class="py-16 bg-background">
        <div class="container mx-auto px-4">
            {% if allNews|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {% for news in allNews %}
                        <article class="bg-card rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 border border-border flex flex-col h-full group" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                            <a href="{{ path('app_news_detail', {'slug': news.slug}) }}" class="block overflow-hidden rounded-t-2xl relative h-56">
                                {% if news.imageName %}
                                    <img src="{{ vich_uploader_asset(news, 'imageFile')|imagine_filter('news_thumb') }}" alt="{{ news.title }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" width="400" height="220">
                                {% else %}
                                    <div class="w-full h-full bg-slate-50 flex items-center justify-center text-slate-300">
                                        <i data-lucide="image" class="w-12 h-12"></i>
                                    </div>
                                {% endif %}
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                            </a>
                            <div class="p-6 flex-1 flex flex-col">
                                <div class="flex flex-wrap gap-2 mb-3">
                                    {% for category in news.categories %}
                                        <a href="{{ path('app_news', {'category': category.slug}) }}" class="text-xs font-bold px-3 py-1 rounded-full bg-primary/10 text-primary hover:bg-primary/20 transition-colors uppercase tracking-wider">
                                            {{ category.title }}
                                        </a>
                                    {% endfor %}
                                </div>
                                <div class="text-xs font-semibold text-primary mb-2 flex items-center gap-1">
                                     <i data-lucide="calendar" class="w-4 h-4"></i>
                                     {{ news.publishedAt|date('d \\d\\e F \\d\\e Y')|replace({
                                    'January': 'Janeiro', 'February': 'Fevereiro', 'March': 'Março', 
                                    'April': 'Abril', 'May': 'Maio', 'June': 'Junho', 
                                    'July': 'Julho', 'August': 'Agosto', 'September': 'Setembro', 
                                    'October': 'Outubro', 'November': 'Novembro', 'December': 'Dezembro'
                                }) }}
                                </div>
                                <h2 class="text-xl font-heading font-bold text-medical-heading mb-3 group-hover:text-primary transition-colors line-clamp-2">
                                    <a href="{{ path('app_news_detail', {'slug': news.slug}) }}">{{ news.title }}</a>
                                </h2>
                                <p class="text-medical-text text-sm line-clamp-3 mb-4 flex-1">
                                    {{ news.summary }}
                                </p>
                                <a href="{{ path('app_news_detail', {'slug': news.slug}) }}" class="text-primary font-bold text-sm hover:underline inline-flex items-center gap-1 mt-auto group-hover:gap-2 transition-all">
                                    Ler mais
                                    <i data-lucide="arrow-right" class="w-4 h-4"></i>
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-20 bg-slate-50 rounded-3xl border border-border">
                    <div class="inline-flex items-center justify-center p-4 bg-white rounded-full mb-4 text-slate-400 shadow-sm">
                        <i data-lucide="search-x" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-xl font-bold text-medical-heading mb-2">Nenhuma notícia encontrada</h3>
                    <p class="text-medical-text max-w-md mx-auto mb-6">
                        {% if searchQuery %}
                            Não encontramos resultados para sua busca. Tente termos diferentes.
                        {% else %}
                            Ainda não há notícias publicadas nesta categoria.
                        {% endif %}
                    </p>
                    <a href="{{ path('app_news') }}" class="btn btn-primary inline-flex items-center gap-2">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i> Ver todas as notícias
                    </a>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
