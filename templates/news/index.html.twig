{% extends 'base_public.html.twig' %}

{% block title %}Notícias - Procordis{% endblock %}
{% block meta_description %}Fique por dentro das últimas notícias, artigos e atualizações da Procordis.{% endblock %}

{% block content %}
    {# Hero Section #}
    {# Hero Section #}
    <section class="relative py-20 overflow-hidden">
        <div class="absolute inset-0 bg-secondary/30"></div>
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
        <div class="container relative z-10 mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-heading font-bold text-medical-heading mb-6" data-aos="fade-up">
                {% if searchQuery %}
                    Resultados para "{{ searchQuery }}"
                {% elseif currentCategory %}
                    Categoria: {{ currentCategory.title }}
                {% else %}
                    Notícias e Artigos
                {% endif %}
            </h1>
            <p class="text-xl text-medical-text max-w-2xl mx-auto mb-8" data-aos="fade-up" data-aos-delay="100">
                Acompanhe as novidades da Procordis e informações importantes sobre saúde cardiovascular.
            </p>

            {# Search & Filter #}
            <div class="max-w-xl mx-auto" data-aos="fade-up" data-aos-delay="200">
                <form action="{{ path('app_news') }}" method="get" class="relative">
                    <input type="search" name="q" value="{{ searchQuery }}" placeholder="Buscar notícias..." class="w-full pl-12 pr-4 py-3 rounded-full border border-border focus:border-primary focus:ring-4 focus:ring-primary/10 outline-none transition-all shadow-sm text-medical-text">
                    <svg class="w-6 h-6 text-medical-placeholder absolute left-4 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </form>
                {% if searchQuery or currentCategory %}
                     <div class="mt-4">
                        <a href="{{ path('app_news') }}" class="text-sm text-primary hover:text-medical-heading underline flex items-center justify-center gap-1">
                            <i data-lucide="x" class="w-4 h-4"></i> Limpar filtros
                        </a>
                     </div>
                {% endif %}
            </div>
        </div>
    </section>

    {# Content Section #}
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4">
            {% if allNews|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {% for news in allNews %}
                        <article class="bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 border border-border flex flex-col h-full group" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                            <a href="{{ path('app_news_detail', {'slug': news.slug}) }}" class="block overflow-hidden rounded-t-2xl relative h-56">
                                {% if news.imageName %}
                                    <img src="{{ vich_uploader_asset(news, 'imageFile') }}" alt="{{ news.title }}" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                                {% else %}
                                    <div class="w-full h-full bg-slate-50 flex items-center justify-center text-slate-300">
                                        <i data-lucide="image" class="w-12 h-12"></i>
                                    </div>
                                {% endif %}
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                            </a>
                            <div class="p-6 flex-1 flex flex-col">
                                <div class="flex flex-wrap gap-2 mb-3">
                                    {% for category in news.categories %}
                                        <a href="{{ path('app_news', {'category': category.slug}) }}" class="text-xs font-bold px-3 py-1 rounded-full bg-primary/10 text-primary hover:bg-primary/20 transition-colors uppercase tracking-wider">
                                            {{ category.title }}
                                        </a>
                                    {% endfor %}
                                </div>
                                <div class="text-xs font-semibold text-primary mb-2 flex items-center gap-1">
                                     <i data-lucide="calendar" class="w-4 h-4"></i>
                                     {{ news.publishedAt|date('d \\d\\e F \\d\\e Y')|replace({
                                    'January': 'Janeiro', 'February': 'Fevereiro', 'March': 'Março', 
                                    'April': 'Abril', 'May': 'Maio', 'June': 'Junho', 
                                    'July': 'Julho', 'August': 'Agosto', 'September': 'Setembro', 
                                    'October': 'Outubro', 'November': 'Novembro', 'December': 'Dezembro'
                                }) }}
                                </div>
                                <h2 class="text-xl font-heading font-bold text-medical-heading mb-3 group-hover:text-primary transition-colors line-clamp-2">
                                    <a href="{{ path('app_news_detail', {'slug': news.slug}) }}">{{ news.title }}</a>
                                </h2>
                                <p class="text-medical-text text-sm line-clamp-3 mb-4 flex-1">
                                    {{ news.summary }}
                                </p>
                                <a href="{{ path('app_news_detail', {'slug': news.slug}) }}" class="text-primary font-bold text-sm hover:underline inline-flex items-center gap-1 mt-auto group-hover:gap-2 transition-all">
                                    Ler mais
                                    <i data-lucide="arrow-right" class="w-4 h-4"></i>
                                </a>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-20 bg-slate-50 rounded-3xl border border-border">
                    <div class="inline-flex items-center justify-center p-4 bg-white rounded-full mb-4 text-slate-400 shadow-sm">
                        <i data-lucide="search-x" class="w-8 h-8"></i>
                    </div>
                    <h3 class="text-xl font-bold text-medical-heading mb-2">Nenhuma notícia encontrada</h3>
                    <p class="text-medical-text max-w-md mx-auto mb-6">
                        {% if searchQuery %}
                            Não encontramos resultados para sua busca. Tente termos diferentes.
                        {% else %}
                            Ainda não há notícias publicadas nesta categoria.
                        {% endif %}
                    </p>
                    <a href="{{ path('app_news') }}" class="btn btn-primary inline-flex items-center gap-2">
                        <i data-lucide="arrow-left" class="w-4 h-4"></i> Ver todas as notícias
                    </a>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
